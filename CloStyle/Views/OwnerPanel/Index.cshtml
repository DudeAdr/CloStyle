@model CloStyle.Application.CloStyle.ViewModels.OwnerPanelVM.OwnerPanelDataVM

@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">Your Dashboard</h2>

    <div class="row g-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary h-100">
                <div class="card-body d-flex flex-column justify-content-center align-items-center">
                    <h6 class="card-title">Total Earnings</h6>
                    <p class="card-text fs-4"><b>@Model.TotalIncome.ToString("C")</b></p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-primary h-100">
                <div class="card-body d-flex flex-column justify-content-center align-items-center">
                    <h6 class="card-title">Total Products</h5>
                        <p class="card-text fs-4"><b>@Model.OwnerProductsAmount</b></p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-primary h-100">
                <div class="card-body d-flex flex-column justify-content-center align-items-center">
                    <h6 class="card-title">Total Brands</h6>
                    <p class="card-text fs-4"><b>@Model.OwnerBrandAmount</b></p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-primary h-100">
                <div class="card-body d-flex flex-column justify-content-center align-items-center">
                    <h6 class="card-title">Items in Carts</h6>
                    <p class="card-text fs-4"><b>@Model.NumberOfProductInUsersCarts</b></p>
                </div>
            </div>
        </div>
    </div>

    <hr class="my-5" />

    <h3 class="mb-4 text-center">Products in User Carts</h3>

    @if (Model.ProductsInUserCarts != null && Model.ProductsInUserCarts.Any())
    {
        <div class="table-responsive mt-3">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Product</th>
                        <th>Brand</th>
                        <th>Size</th>
                        <th>Quantity</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ProductsInUserCarts)
                    {
                        <tr>
                            <td>@item.ProductName</td>
                            <td>@item.BrandName</td>
                            <td>@item.ProductSizeName</td>
                            <td>@item.Quantity</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p class="text-muted mt-3">No products currently in carts.</p>
    }
</div>
