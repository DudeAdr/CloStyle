@using CloStyle.Application.CloStyle.ViewModels
@model DeleteProductViewModel

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-body">
            <h3 class="card-title text-danger">Are you sure you want to delete <strong>@Model.Name</strong>?</h3>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Price</dt>
                <dd class="col-sm-9">@Model.Price.ToString("C")</dd>

                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="BrandId" />
                <input type="hidden" asp-for="Id" />

                <div class="d-flex">
                    <a href="/CloStyle/@Model.BrandName/Products?brandId=@Model.BrandId" class="btn btn-secondary me-2">
                        ⬅️ Back to List
                    </a>
                    <button type="submit" class="btn btn-danger me-2">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                </div>
            </form>

        </div>
    </div>
</div>
