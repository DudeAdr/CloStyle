@model CloStyle.Application.CloStyle.Commands.DeleteProduct.DeleteProductCommand

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-body">
            <h3 class="card-title text-danger">Are you sure you want to delete <strong>@Model.Name</strong>?</h3>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-3">Price</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Price)</dd>

                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="BrandId" />

                <div class="d-flex justify-content-between">
                    <a href="/CloStyle/@ViewBag.BrandName/Products?brandId=@Model.BrandId"
                       class="btn btn-secondary">
                        Back to List
                    </a>
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </div>
            </form>

        </div>
    </div>
</div>
