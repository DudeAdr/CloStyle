@model IEnumerable<CloStyle.Application.CloStyle.BrandDto>

@{
    ViewData["Title"] = "Index";
}

<h1 style="text-align:center">Manage brands</h1>

<p>
    <a asp-action="Add" class="btn btn-primary">Add New Brand</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="card m-3" style="width: 18rem;">
            @*@<img src="@item.Picture" class="card-img-top" alt="Image of @item.Name"> TODO LATER*@
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <a asp-action="Edit" class="btn btn-primary">Edit</a>
                <a asp-action="ViewProducts" class="btn btn-secondary">Products</a>
                <a asp-action="Delete" class="btn btn-danger">Delete</a>
            </div>
        </div>
    }
</div>


