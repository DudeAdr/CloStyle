@using CloStyle.Application.CloStyle.Dtos
@model IEnumerable<ProductDto>

@{
    ViewData["Title"] = "Produkty marki";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-5 mb-0">
            Products: <span class="text-primary">@ViewBag.BrandName</span>
        </h1>
        <a asp-controller="Brand" asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Powrót do marek
        </a>
        <a asp-controller="Product" asp-action="Add" asp-route-id="@ViewBag.BrandId" aspclass="btn btn-success d-flex align-items-center">
            <i class="bi bi-plus-circle me-2"></i> Add New Product
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center" role="alert">
            Brak produktów do wyświetlenia.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-bordered table-hover align-middle shadow-sm">
                <thead class="table-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.First().Name)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Price)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Description)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Category.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Gender.Name)</th>
                        <th>Sizes</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.Name</td>
                            <td>@product.Price.ToString("C")</td>
                            <td>@product.Description</td>
                            <td>@product.Category.Name</td>
                            <td>@product.Gender.Name</td>
                            <td>
                                @if (product.Sizes != null && product.Sizes.Any())
                                {
                                    <ul class="list-group list-group-flush">
                                        @foreach (var size in product.Sizes)
                                        {
                                            <li class="list-group-item px-2 py-1">
                                                Size: <strong>@size.Size</strong> – Quantity: <strong>@size.Stock</strong>
                                            </li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <span class="text-muted">No data</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
