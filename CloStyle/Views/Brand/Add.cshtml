@using CloStyle.Application.CloStyle.Commands.AddBrand
@model AddBrandCommand

<h1><i class="bi bi-plus-circle me-3"></i> Add new brand</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form action="/Brand/Add" method="post" enctype="multipart/form-data">
            <div class="form-group mb-3">
                <label class="control-label" asp-for="Name">Name</label>
                <input class="form-control" type="text" asp-for="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="imageFile">Logo image</label>
                <input type="file" name="ImageFile" id="imageFile" class="form-control" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>

            <div class="form-group mb-3 mt-3">
                <a asp-controller="Brand" asp-action="Index" type="button" class="btn btn-outline-secondary my-2 me-2">⬅️ Back to List</a>
                <input type="submit" value="Add" class="btn btn-primary my-2" />
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
