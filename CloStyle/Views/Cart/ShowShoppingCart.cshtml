@model CloStyle.Application.CloStyle.ViewModels.ShoppingCartVM.ShoppingCartDetailsVM

@{
    ViewData["Title"] = "ShowShoppingCart";
}

<h1>Your shopping cart:</h1>

<div>
    <hr />
    @foreach (var item in Model.Items)
    {
        <div>
            <dl class="row">
                <dt class="col-sm-2">
                    Product ID
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(modelItem => item.ProductId)
                </dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-2">
                    Brand Name
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(modelItem => item.BrandName)
                </dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-2">
                    Product Name
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(modelItem => item.ProductName)
                </dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-2">
                    Quantity
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(modelItem => item.Quantity)
                </dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-2">
                    Unit Price
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(modelItem => item.UnitPrice)
                </dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-2">
                    Total Price
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(modelItem => item.TotalPrice)
                </dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-2">
                    Size Id
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(modelItem => item.ProductSizeId)
                </dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-2">
                    Size
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(modelItem => item.ProductSizeName)
                </dd>
            </dl>
            <br /><br />
        </div>
    }
    <dl class="row">
        <dt class = "col-sm-2">
            Total: 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TotalCartPrice)
        </dd>
    </dl>
</div>