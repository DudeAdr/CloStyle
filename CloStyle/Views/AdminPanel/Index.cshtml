@model IEnumerable<CloStyle.Application.CloStyle.Dtos.AdminPanelDTOs.UserDto>
@using CloStyle.Application.CloStyle.ViewModels.AdminPanelVM;
@{
    ViewData["Title"] = "Users List";
}

<div class="text-center mb-5 mt-4">
    <h1>@ViewData["Title"]</h1>
</div>

<table class="table table-bordered table-striped text-center align-middle">
    <thead class="table-light fs-5">
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Amount of Brands</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td><strong>@user.Name</strong></td>
                <td>@user.Email</td>
                <td>@user.BrandsCount</td>
                <td>
                    @if (user.Roles != null && user.Roles.Any())
                    {
                        <span>@string.Join(", ", user.Roles)</span>
                    }
                    else
                    {
                        <em>No roles</em>
                    }
                </td>
                <td>
                    <div class="dropdown">
                        <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-three-dots-vertical"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li>
                                <button class="dropdown-item" data-bs-toggle="modal" data-bs-target="#userBrandsModal_@user.Id">
                                    👁 Show Brands
                                </button>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-controller="AdminPanel" asp-action="ChangeUserPermissions" asp-route-id="@user.Id">
                                    🔧 Change Permissions
                                </a>
                            </li>
                            <li>
                                <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this user?');">
                                    <button type="submit" class="dropdown-item text-danger">
                                        🗑 Delete
                                    </button>
                                </form>
                            </li>
                        </ul>
                        <partial name="_ShowUserBrands" model="new ShowUserBrandsVM(){UserId = user.Id, UserName = user.Name, Brands = user.Brands}" />
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>